
<div class="container-fluid">
 <div class="pr">
  <div class="carousel-siema" id="js-siema">
    {{#each banners}}
        <div>
            {{#if link}}<a href="{{link}}">{{/if}}
            <img src="{{src}}" class="d-block w-100" alt="{{alt}}">
            {{#if link}}</a>{{/if}}
        </div>
    {{/each}}
  </div>
  <button class="js-siema-prev btn btn-text btn-siema-prev"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-caret-left-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path d="M3.86 8.753l5.482 4.796c.646.566 1.658.106 1.658-.753V3.204a1 1 0 0 0-1.659-.753l-5.48 4.796a1 1 0 0 0 0 1.506z"/></svg></button>
  <button class="js-siema-next btn btn-text btn-siema-next"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-caret-right-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path d="M12.14 8.753l-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/></svg></button>
 </div>
</div>

<div class="container">
    <h1 class="text-center p-2">{{shop.name}}</h1>
    <section class="homePage-categories">
		<div class="categoriesBlock-container">
		    <div id="categories-block" class="categoriesBlock">
			    <ul id="categories" class="categoriesBlock-categories">
                    {{#each catogorys}}
					<li class="categoriesBlock-categories-item">
						<a href="/{{../shop.url}}/catalog/section/{{id}}">
							{{name}}
						</a>
					</li>
                    {{/each}}
				</ul>
		    </div>
	    </div>
	</section>
    <section class="catalog-items">
        <div class="row">
            {{#each catalog}}
                <div class="col-md-3 col-6 mb-4">
                    <div class="catalog-card">
                        <div class="catalog-card__image">
                            <a href="/{{../shop.url}}/catalog-detail/{{id}}"><img src="{{picture}}" alt="{{name}}"></a>
                        </div>
                        <a href="/{{../shop.url}}/catalog-detail/{{id}}" class="catalog-card__title">{{name}}</a>
                        <span class="js-price">{{price}}</span>
                            <button 
                                data-shop="{{../shop.url}}" 
                                data-id="{{id}}" 
                                data-name="{{name}}" 
                                data-price="{{price}}" 
                                data-csrf="{{../csrf}}"
                                class="btn btn-outline-primary js-btn-add-cart"
                                type=""
                            >В корзину</button>

                    </div>
                </div>
            {{/each}}
        </div>
    </section>
</div>