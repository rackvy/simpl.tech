<div class="row">
    <div class="col-md-6">
        <div class="block-style p-4">
            <h4>Редактировать информацию</h4>
            <form class="js-form needs-validation g-3" method="POST" action="">
                {{#if error}}
                    <div class="alert alert-danger">{{ message}}</div>
                {{/if}}
                {{#if success}}
                    <div class="alert alert-success">{{ message}}</div>
                {{/if}}
                <div class="row">
                    <div class="col-md-12 mb-2">
                        <label for="validation-email" class="form-label">E-mail</label>
                        <input type="email" class="form-control" name="email" id="validation-email" value="{{user.email}}" required>
                    </div>
                    <div class="col-md-12 mb-2">
                        <label for="validation-password" class="form-label">Пароль</label>
                        <input type="password" class="form-control" name="password" id="validation-password" value="">
                    </div>
                    <div class="col-md-12 mb-2">
                        <label for="validation-name" class="form-label">ФИО</label>
                        <input type="text" class="form-control" name="name" id="validation-name" value="{{user.name}}" required>
                    </div>
                    <div class="col-md-12 mb-2">
                        <label for="inputPhone" class="form-label">Телефон</label>
                        <input type="text" class="form-control" name="phone" id="inputPhone" value="{{user.phone}}" required>
                    </div>
                </div>
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <input type="hidden" name="id" value="{{userId}}">
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </form>
        </div>
    </div>
</div>
